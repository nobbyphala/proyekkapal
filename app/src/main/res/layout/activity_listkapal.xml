<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listkapal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="widhimp.manajemenproyekreparasi.Activity.ListkapalActivity"
    android:background="@drawable/background"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ListView
            android:id="@+id/list_kapal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:theme="@style/Base.TextAppearance.AppCompat" />


        <Button
            android:id="@+id/list_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/warnaku4"
            android:text="TAMBAH KAPAL"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</RelativeLayout>
