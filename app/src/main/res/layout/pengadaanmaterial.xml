<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:padding="15dp" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="MATERIAL TERSEDIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/materialtersedia_pengadaanmaterial"
            android:background="@color/warnaku4" />

        <Button
            android:layout_marginTop="10dp"
            android:text="PERMINTAAN MATERIAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/permintaan_pengadaanmaterial"
            android:background="@color/warnaku4" />

    </LinearLayout>
</RelativeLayout>