<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="widhimp.manajemenproyekreparasi.Integrasi.Integrasi">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/pmo_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnaku4"
                android:text="PMO" />

            <Button
                android:id="@+id/class_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="CLASS" />

            <Button
                android:id="@+id/qaqc_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="QA/QC" />

            <Button
                android:id="@+id/harkan_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="KADEPT HARKAN" />

            <Button
                android:id="@+id/pemasaran_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="PEMASARAN" />

            <Button
                android:id="@+id/produksi_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="KADEPT PRODUKSI" />

            <Button
                android:id="@+id/logistik_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="KADEPT LOGISTIK" />

            <Button
                android:id="@+id/safety_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="SAFETY OFFICER" />

            <Button
                android:id="@+id/pengadaan_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="PENGADAAN" />

            <Button
                android:id="@+id/subkontraktor_integrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="SUB-KONTRAKTOR" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
