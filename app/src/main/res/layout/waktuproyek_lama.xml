<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/waktuproyek_lama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="widhimp.manajemenproyekreparasi.WaktuProyek.LamaProyek">

    <LinearLayout
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durasi Kapal Direparasi :"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/warnaku1"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/durasi_lamaproyek"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="xx"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Day"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tanggal Mulai Proyek :"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/warnaku1"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/tanggalmulai_lamaproyek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="yyyy-mm-dd"
            android:inputType="date"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tanggal Selesai Proyek :"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/warnaku1"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/tanggalselesai_lamaproyek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="yyyy-mm-dd"
            android:inputType="date"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/simpan_lamaproyek"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.01"
            android:background="@color/warnaku3"
            android:text="SIMPAN"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
