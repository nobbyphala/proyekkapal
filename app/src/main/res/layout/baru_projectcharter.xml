<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editkapal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="widhimp.manajemenproyekreparasi.Activity.EditkapalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/integrasi_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnaku4"
                android:text="OTORITAS"
                android:textColor="@android:color/white" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/ruanglingkup_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="SURAT PERINTAH" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/komunikasi_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="STAKEHOLDER UTAMA" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/waktuproyek_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="TUJUAN" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/sdmproyek_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="RUANG LINGKUP" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/biayaproyek_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="BUDGET" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/mutuproyek_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="DURASI" />

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/pengadaan_sow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/warnaku4"
                android:text="PRIORITAS" />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
