<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Nama :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/warnaku4"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:layout_weight="0.23" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nama_tambahgalangandetail"
                android:layout_weight="0.87"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Jabatan :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/warnaku4"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:layout_weight="0.10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/jabatan_tambahgalangandetail"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Kontak :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/warnaku4"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:layout_weight="0.19" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/kontak_tambahgalangandetail"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:inputType="phone" />

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:text="TAMBAH"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/tambah_tambahgalangandetail"
            android:background="@color/warnaku3" />
    </LinearLayout>

</RelativeLayout>