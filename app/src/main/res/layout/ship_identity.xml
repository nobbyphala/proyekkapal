<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambahkapal"
    android:background="@drawable/background"
    android:padding="15dp"
    tools:context="widhimp.manajemenproyekreparasi.Activity.ShipIdentity">


    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/bg">
    
            <LinearLayout

                android:alpha="1"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name"

                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/name_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.05"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="70sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.97"
                        android:gravity="center_vertical"
                        android:text="Type of Ship"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/type_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Type of Ship"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >

                    <TextView
                        android:id="@+id/we"
                        android:layout_width="70sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.00"
                        android:gravity="center_vertical"
                        android:text="Length Overall"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/length_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Length Overall"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Depth"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/depth_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Depth"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHighlight="?attr/colorControlNormal"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.84"
                        android:text="Breadth"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/breadth_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.57"
                        android:ems="10"
                        android:hint="Breadth"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:text="Draft"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/draft_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.54"
                        android:ems="10"
                        android:hint="Draft"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.75"
                        android:text="DWT"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/dwt_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.81"
                        android:ems="10"
                        android:hint="DWT"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
    
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/w"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"
                        android:gravity="center_vertical"
                        android:text="Type of Survey"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/survey_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="Type of Survey"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />
                </LinearLayout>
    
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:text="Class"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/warnaku1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/class_shipidentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.66"
                        android:ems="10"
                        android:hint="Class"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textColorHint="?attr/colorControlNormal"
                        android:textSize="18sp" />

                </LinearLayout>
    
            </LinearLayout>
        </ScrollView>

        <Button
            android:text="NEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/next_shipidentity"
            android:background="@color/warnaku4"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</RelativeLayout>